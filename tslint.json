{
	"extends": "tslint:recommended",
	"rules": {
		"array-type": [true, "generic"],
		"indent": [true, "tabs", 4],
		"member-access": true,
		"no-console": [false],
		"no-duplicate-variable": true,
		"object-literal-sort-keys": false,
		"quotemark": [true, "single"],
		"linebreak-style": false,
		"prefer-for-of": false,
		"max-line-length": [
			true,
			{
				"limit": 160,
				"ignore-pattern": "^import | *export .*? {"
			}
		]
	}
}
